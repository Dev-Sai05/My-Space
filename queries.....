-- Basic connect and resource privileges
GRANT CONNECT, RESOURCE TO NBC_SVN;

-- Unlimited quota on all tablespaces
ALTER USER NBC_SVN QUOTA UNLIMITED ON USERS;
ALTER USER NBC_SVN QUOTA UNLIMITED ON SYSTEM;

-- System-level privileges (create/drop objects, manage schema)
GRANT CREATE SESSION TO NBC_SVN;
GRANT CREATE TABLE TO NBC_SVN;
GRANT CREATE VIEW TO NBC_SVN;
GRANT CREATE SEQUENCE TO NBC_SVN;
GRANT CREATE PROCEDURE TO NBC_SVN;
GRANT CREATE TRIGGER TO NBC_SVN;
GRANT CREATE TYPE TO NBC_SVN;
GRANT CREATE MATERIALIZED VIEW TO NBC_SVN;

-- Allow dropping any objects
GRANT DROP ANY TABLE TO NBC_SVN;
GRANT DROP ANY VIEW TO NBC_SVN;
GRANT DROP ANY PROCEDURE TO NBC_SVN;

-- Full DBA access inside ORCLPDB
GRANT DBA TO NBC_SVN;